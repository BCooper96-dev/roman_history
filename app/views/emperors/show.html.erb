<div class="emperor-details">
<h1><%= @emperor.name %></h1>

<p>Reign: <%= @emperor.reign_start&.year %> - <%= @emperor.reign_end&.year %></p>
<p>Birth Place: <%= @emperor.birth_place %></p>
<p>Bio: <%= @emperor.bio %></p>
<p>Fun Fact: <%= @emperor.fun_fact %></p>
<% if @emperor.image_url.present? %>
  <%= image_tag @emperor.image_url, alt: @emperor.name, style: "max-width: 300px;" %>
<% end %>

<%= link_to 'Back to List', emperors_path %>
</div>